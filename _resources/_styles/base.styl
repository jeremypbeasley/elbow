html {
  min-height 100%
}
* {
  -webkit-tap-highlight-color rgba(0, 0, 0, 0)
  -webkit-font-smoothing antialiased
  font-smoothing antialiased
  box-sizing border-box
}
body {
  height: 100%;
  width: 100vw;
  overflow-y auto
  overflow-x hidden
  margin 0
  font-family typeface-primary
  background color-background
  color color-text
}
img {
  max-width: 100%;
  // filter: grayscale(100%);
}
.main {
  padding: unit3;
}
.divider {
  width: 100%;
  height: 1px;
  background: black;
}
span.blue {
  color: blue;
}
.restaurantList {
  list-style: none;
  padding: 0;
  margin: 0;
  margin-top: unit4
}
.restaurantList li {
  border-bottom: 1px dashed rgba(0, 0, 0, 0.1);
  width: 100%;
  display: flex;
}
.restaurantDetails,
.restaurantImage {
  float: left;
}
.restaurantImage {
  background: rgba(0, 0, 0, 0.2);
  width: 100px;
  height: 100px;
  position: relative;
  border-radius: 6px;
  margin-right: 16px;
}
.restaurantName {
  font-family: 'HelveticaNeue-Medium';
  font-weight: normal;
  color: color-black
}

